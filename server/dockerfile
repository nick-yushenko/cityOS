# Stage 1: build
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

COPY ["CityOS.csproj", "./"]
RUN dotnet restore "CityOS.csproj"

COPY . .
RUN dotnet publish "CityOS.csproj" -c Release -o /app/publish

# Stage 2: runtime
FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS final
WORKDIR /app

COPY --from=build /app/publish .

# ASP.NET по умолчанию слушает 8080 внутри контейнера? нет, обычно 8080/80,
# но мы явно укажем:
ENV ASPNETCORE_URLS=http://+:8080

EXPOSE 8080

ENTRYPOINT ["dotnet", "CityOS.dll"]
